<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<div id="kt_app_toolbar" class="py-3 py-lg-6">
  <div id="kt_app_toolbar_container" class="app-container">
    <%# include ../../partials/message.ejs %>
    <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
      <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
        <%= subtitle %></h1>
      <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
        <li class="breadcrumb-item text-muted">
          <a href="/" class="text-muted text-hover-primary">Home</a>
        </li>
        <li class="breadcrumb-item">
          <span class="bullet bg-gray-400 w-5px h-2px"></span>
        </li>
        <li class="breadcrumb-item text-muted"><%= subtitle %></li>
      </ul>
    </div>

    <div class="card shadow-sm mt-5">
      <div class="card-header">
        <h3 class="card-title">Form Persetujuan</h3>
      </div>
      <div class="card-body">

        <!-- update -->
        <div class="card shadow-sm mb-15">
          <div class="card-header">
            <span class="card-title">Update</span>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <div class="mb-5 hover-scroll-x">
                  <div class="d-grid">
                    <ul class="nav nav-tabs flex-nowrap text-nowrap">
                      <li class="nav-item">
                        <a class="nav-link active btn btn-active-light btn-color-gray-600 btn-active-color-primary rounded-bottom-0" data-bs-toggle="tab" href="#kt_tab_pane_1">Kepala Surat</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link  btn btn-active-light btn-color-gray-600 btn-active-color-primary rounded-bottom-0" data-bs-toggle="tab" href="#kt_tab_pane_2">Isi Surat</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link  btn btn-active-light btn-color-gray-600 btn-active-color-primary rounded-bottom-0" data-bs-toggle="tab" href="#kt_tab_pane_3">Attachment</a>
                      </li>
                      <!-- <li class="nav-item">
                        <a class="nav-link  btn btn-active-light btn-color-gray-600 btn-active-color-primary rounded-bottom-0" data-bs-toggle="tab" href="#kt_tab_pane_4">Penerima</a>
                      </li> -->
                    </ul>
                  </div>
                </div>

                <div class="tab-content" id="myTabContent">
                  <div class="tab-pane fade show active" id="kt_tab_pane_1" role="tabpanel">
                    <form>
                      <div class="row mb-5 d-flex align-items-center">
                        <div class="col-md-4">
                          <label class="required form-label">Penerima</label>
                        </div>
                        <div class="col-md-8">
                          <select class="form-select" id="penerima" name="penerima" data-control="select2" data-placeholder="dikirimkan kepada" data-allow-clear="true">
                            <% users.forEach(user=> { %>
                            <option value="<%= user.jabatan.sebutanJabatan %>" <%= user.jabatan.sebutanJabatan === notaDinas.kepada ? "selected" : "" %> data-email="<%= user.email %>">
                              <%= user.username %> - <%= user.jabatan.sebutanJabatan %>
                            </option>

                            <% }) %>
                          </select>
                        </div>
                      </div>

                      <div class="row mb-5 d-flex align-items-center">
                        <div class="col-md-4">
                          <label class="required form-label">Pemeriksa</label>
                        </div>
                        <div class="col-md-8">
                          <select class="form-select" id="pemeriksa" name="pemeriksa" data-control="select2" data-placeholder="diperiksa oleh" data-allow-clear="true">
                            <option value=""></option>
                            <% users.forEach(user=> { %>
                            <option value="<%= notaDinas.pemeriksa %>" <%= user.jabatan.sebutanJabatan === notaDinas.pemeriksa ? 'selected' : '' %> data-email="<%= user.email %>" data-kode="<%= user.username %>" data-jabatan="<%= user.jabatan.sebutanJabatan %>" data-divisi="<%= user.jabatan.namaUnit %>">
                              <%= user.username %> - <%= user.jabatan.sebutanJabatan %>
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </div>

                      <div class="row mb-5 d-flex align-items-center">
                        <div class="col-md-4">
                          <label class="required form-label"> Tanggal </label>
                        </div>
                        <div class="col-md-8">
                          <input class="form-control" name="tanggal" placeholder="pilih tanggal" id="tanggal" value="<%= notaDinas.tanggal %>" />
                        </div>
                      </div>

                      <div class="row mb-5 d-flex align-items-center">
                        <div class="col-md-4">
                          <label class="required form-label">Kode Klasifikasi</label>
                        </div>
                        <div class="col-md-8">
                          <select class="form-select" id="kodeKlasifikasi" name="kodeKlasifikasi" data-control="select2" data-placeholder="pilih kode klasifikasi" data-allow-clear="true">
                            <option value=""></option>
                            <% klasifikasi.forEach(data=> { %>
                            <% data.klasifikasi.forEach(index=> { %>
                            <option value="<%= index.kode %>" <%= index.kode === notaDinas.kodeKlasifikasi ? "selected" : "" %>>
                              <%= index.kode %> - <%= index.jenis %>
                            </option>
                            <% }) %>
                            <% }) %>
                          </select>
                        </div>
                      </div>

                      <div class="row mb-5 d-flex align-items-center">
                        <div class="col-md-4">
                          <label class="required form-label" for="sifat">Sifat</label>
                        </div>
                        <div class="col-md-8">
                          <select class="form-select" name="sifat" id="sifat" data-control="select2" data-placeholder="Pilih sifat" data-allow-clear="true">
                            <option></option>
                            <option value="Segera" <%= notaDinas.sifat === "Segera" ? "selected" : "" %>>Segera</option>
                            <option value="Amat Segera" <%= notaDinas.sifat === "Amat Segera" ? "selected" : "" %>>Amat Segera </option>
                          </select>
                        </div>
                      </div>

                      <div class="row mb-5 d-flex align-items-center">
                        <div class="col-md-4">
                          <label class="form-label"> Lampiran</label>
                        </div>
                        <div class="col-md-8">
                          <div class="row">
                            <div class="col-sm-4">
                              <input type="number" class="form-control" id="jumlah-lampiran" name="" value="<%= notaDinas.jumlahLampiran %>" placeholder="0">
                            </div>
                            <div class="col-sm-8">
                              <select class=" form-control form-select" name="" id="tipe-lampiran" data-control="select2" data-placeholder="Lampiran" data-allow-clear="true">
                                <option></option>
                                <option value="Lembar" <%= notaDinas.jenisLampiran === "Lembar" ? "selected" : "" %>>Lembar</option>
                                <option value="Berkas" <%= notaDinas.jenisLampiran === "Berkas" ? "selected" : "" %>>Berkas</option>
                                <option value="Halaman" <%= notaDinas.jenisLampiran === "Halaman" ? "selected" : "" %>>Halaman</option>
                              </select>
                            </div>
                          </div>
                        </div>
                      </div>

                      <div class="row mb-5 d-flex align-items-center">
                        <div class="col-md-4">
                          <label class="required form-label">Hal</label>
                        </div>
                        <div class="col-md-8">
                          <textarea type="textarea" id="perihal" name="perihal" class="form-control"><%= notaDinas.perihal %></textarea>
                        </div>
                      </div>

                      <div class="row mb-5 d-flex align-items-center">
                        <div class="col-md-4">
                          <label class="form-label">Tembusan</label>
                        </div>
                        <div class="col-md-8">
                          <select class="form-select" id="tembusan" name="tembusan" data-control="select2" data-close-on-select="tru" data-placeholder="dikirimkan kepada" data-allow-clear="true" multiple="multiple">
                            <option></option>
                            <% users.forEach(user=> { %>
                            <option value="<%= user.jabatan.sebutanJabatan %>" <%= notaDinas.tembusan.includes(user.jabatan.sebutanJabatan) ? "selected" : ""%>>
                              <%= user.username %> - <%= user.jabatan.sebutanJabatan %>
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                    </form>
                  </div>
                  <div class="tab-pane fade" id="kt_tab_pane_2" role="tabpanel">
                    <form action="">
                      <textarea id="my-expressjs-tinymce-app">
                        <%= notaDinas.isiSurat %>
                      </textarea>
                    </form>
                  </div>
                  <div class="tab-pane fade" id="kt_tab_pane_3" role="tabpanel">
                    <div class="form-group mb-5">
                      <label class="form-label" for="attachment"> Upload Dokumen Surat/Fax </label>
                      <input type="file" name="attachment" id="attachment" class="dropify" data-height="100" data-default-file="<%= notaDinas.attachment  %>" />
                      <div class="text-danger">
                        <i>*Drop File atau klik disini untuk mengupload.</i>
                      </div>
                    </div>
                  </div>
                </div>


              </div>
              <div class="col-md-6 row-divider">
                <div class="mb-2 d-flex justify-content-end">
                  <button type="button" class="btn btn-primary hover-scale me-3 load-indicator" id="generate-pdf" onclick="generatePDF()">
                    <span class="indicator-label"> Preview </span>
                    <span class="indicator-progress">
                      Please wait... <span class="spinner-border spinner-border-sm align-middle"></span>
                    </span>
                  </button>
                  <button type="button" id="btnKirim" class="btn btn-info hover-scale me-3 load-indicator" onclick="sendPDF()">
                    <span class="indicator-label"> Update </span>
                    <span class="indicator-progress">
                      Please wait... <span class="spinner-border spinner-border-sm align-middle"></span>
                    </span>
                  </button>
                </div>
                <iframe id="pdfViewer" src="/document/nota-dinas/<%= notaDinas.tahun %>/<%= notaDinas.document %>" width="100%" height="850px"></iframe>
              </div>
            </div>
          </div>
        </div>

        <!-- approval -->
        <div class="card shadow-sm mb-10">
          <div class="card-header">
            <span class="card-title">Persetujuan Pemeriksa</span>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-8 mb-8">
                <div class="d-flex align-items-center rounded py-5 px-5 bg-light-primary ">
                  <i class="las la-info-circle fs-3x text-primary me-5"></i>
                  <div class="text-gray-700 fw-bold fs-6">
                    Silahkan pilih keputusan persetujuan Nota Dinas
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-2">
                <label class="required form-label">Keputusan</label>
              </div>
              <div class="col-sm-4">
                <select class="form-select form-select-solid" name="flag" id="flag" data-control="select2" data-placeholder="Pilih" data-allow-clear="true">
                  <option value="">--- Pilih ---</option>
                  <option value="2" <%= notaDinas.flag === 2 ? "selected" : ""  %>>Setuju</option>
                  <option value="3" <%= notaDinas.flag === 3 ? "selected" : ""  %>>Batal</option>
                </select>
              </div>
              <div class="col-sm-4">
                <button type="button" id="btnSubmit" class="btn btn-primary hover-scale me-3 px-10 load-indicator" onclick="approve()">
                  <span class="indicator-label"> Kirim </span>
                  <span class="indicator-progress">
                    Please wait... <span class="spinner-border spinner-border-sm align-middle"></span>
                  </span>
                </button>

              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>






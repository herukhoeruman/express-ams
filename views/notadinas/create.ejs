<%- include ../partials/header.ejs %>
<%- include ../partials/navbar.ejs %>
<%- include ../partials/sidebar.ejs %>

<div id="kt_app_toolbar" class="py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0"> Nota Dinas</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a href="/" class="text-muted text-hover-primary">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-muted">Nota Dinas</li>
            </ul>
        </div>
        <div class="card shadow-sm mt-5">
            <div class="card-header">
                <h3 class="card-title">Buat Nota Dinas</h3>
            </div>
            <div class="card-body">
                <div class="stepper stepper-pills stepper-column d-flex flex-column flex-lg-row"
                    id="createNotaDinas">
                    <div class="d-flex flex-row-auto w-100 w-lg-300px">
                        <div class="stepper-nav flex-cente">
                            <div class="stepper-item me-5 current" data-kt-stepper-element="nav">
                                <div class="stepper-wrapper d-flex align-items-center">
                                    <div class="stepper-icon w-40px h-40px">
                                        <i class="stepper-check fas fa-check"></i>
                                        <span class="stepper-number">1</span>
                                    </div>
                                    <div class="stepper-label">
                                        <h3 class="stepper-title"> Step 1 </h3>
                                        <div class="stepper-desc"> Buat Nota Dinas </div>
                                    </div>
                                </div>
                                <div class="stepper-line h-40px"></div>
                            </div>
                            <div class="stepper-item me-5" data-kt-stepper-element="nav">
                                <div class="stepper-wrapper d-flex align-items-center">
                                    <div class="stepper-icon w-40px h-40px">
                                        <i class="stepper-check fas fa-check"></i>
                                        <span class="stepper-number">2</span>
                                    </div>
                                    <div class="stepper-label">
                                        <h3 class="stepper-title">
                                            Step 2
                                        </h3>
                                        <div class="stepper-desc">
                                            Disposisi
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="flex-row-fluid">
                        <div class="card shadow-sm">
                            <div class="card-header">
                                <h3 class="card-title"></h3>
                                <div class="card-toolbar"> </div>
                            </div>
                            <div class="card-body">
                                <div class="mx-auto" novalidate="novalidate">
                                    <div class="mb-5">
                                        <form action="" method="" id="createNotaDinas">
                                            <div class="row current" data-kt-stepper-element="content">
                                                <div class="col">
                                                    <div class="form-group mb-5">
                                                        <label class="required form-label" for="tahunAgenda"> Tahun Agenda</label>
                                                        <select class="form-select form-select-solid" name="tahunAgenda" id="tahunAgenda" data-control="select2" data-placeholder="Pilih tahun agenda" data-allow-clear="true">
                                                            <option></option>
                                                            <option value="2022">2022</option>
                                                            <option value="2023">2023</option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group mb-5">
                                                        <label class="required form-label"> Tanggal Nota Dinas</label>
                                                        <input class="form-control form-control-solid" name="tglNotaDinas" placeholder="Pilih tanggal" id="tglNotaDinas-step1" />
                                                    </div>
                                                    <div class="form-group mb-5">
                                                        <label class="required form-label"> Dari</label>
                                                        <input type="text" id="dari-step1" name="dari" class="form-control" value="<%= username %>"/>
                                                    </div>
                                                    <div class="form-group mb-5">
                                                        <label class="required form-label">Kepada</label> 
                                                        <select class="form-select form-select-solid" id="kepada-step1" name="kepada" data-control="select2" data-placeholder="Dikirimkan kepada" data-allow-clear="true">
                                                            <% users.forEach(user=> { %>
                                                                <option value="<%= user.username %>">
                                                                    <%= user.username %> - <%= user.jabatan %>
                                                                </option>
                                                                <% }) %>
                                                        </select>
                                                    </div>
                                                    <div class="form-group mb-5">
                                                        <label class="required form-label">Perihal</label>
                                                        <textarea type="textarea" id="perihal-step1" name="perihal" class="form-control"></textarea>
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group mb-5">
                                                        <label class="form-label">Lampiran</label>
                                                        <input type="text" id="lampiran-step1" name="lampiran" class="form-control" />
                                                    </div>
                                                    <div class="form-group mb-5">
                                                        <label class="required form-label">Permasalahan</label>
                                                        <input type="text" id="kodeMasalah-step1" name="kodeMasalah" class="form-control" />
                                                    </div>
                                                    <div class="form-group mb-5">
                                                        <label class="required form-label" for="sifat">Sifat</label>
                                                        <select class="form-select form-select-solid" name="sifat" id="sifat-step1" data-control="select2" data-placeholder="Pilih sifat" data-allow-clear="true">
                                                            <option></option>
                                                            <option value="Segera">Segera</option>
                                                            <option value="Amat Segera">Amat Segera
                                                            </option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group mb-5">
                                                        <label class="form-label">Keterangan</label>
                                                        <textarea type="textarea" id="keterangan-step1" name="keterangan" class="form-control"></textarea>
                                                    </div>
                                                    <div class="form-group d-flex justify-content-end">
                                                        <button type="button" class="btn btn-info btn-sm" id="btnRegisterNoNotaDinas" onclick="registerNoNotaDinas()">Register Nota Dinas</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                        <div class="flex-column" data-kt-stepper-element="content">
                                            <div class="row">
                                                <div class="col">
                                                    <form id="formCreate">
                                                        <div class="form-group mb-5">
                                                            <label class="form-label"> No Agenda</label>
                                                            <input type="text" id="noAgenda" name="noAgenda" class="form-control" disabled />
                                                        </div>
                                                        <div class="form-group mb-5">
                                                            <label class="form-label"> No Nota Dinas</label>
                                                            <input type="text" id="noNotaDinas" name="noNotaDinas" class="form-control" disabled />
                                                        </div>
                                                        <div class="form-group mb-5">
                                                            <label class="required form-label"> Tanggal Nota Dinas</label>
                                                            <input class="form-control form-control-solid" name="tglNotaDinas" placeholder="Pilih tanggal" id="tglNotaDinas" />
                                                        </div>
                                                        <div class="form-group mb-5">
                                                            <label class="form-label"> Dari </label>
                                                            <input type="text" id="dari" name="dari" class="form-control" value="<%= username %>" />
                                                        </div>
                                                        <div class="form-group mb-5">
                                                            <label class="form-label"> Kepada </label>
                                                            <input type="text" id="kepada" name="kepada" class="form-control" />
                                                        </div>
                                                        <div class="form-group mb-5">
                                                            <label class="form-label"> Perihal </label>
                                                            <textarea type="text" id="perihal" name="perihal" class="form-control"></textarea>
                                                        </div>
                                                        <div class="form-group mb-5">
                                                            <label class="form-label"> Lampiran </label>
                                                            <input type="text" id="lampiran" name="lampiran" class="form-control" />
                                                        </div>
                                                        <div class="form-group mb-5">
                                                            <label class="form-label"> Permasalahan </label>
                                                            <input type="text" id="kodeMasalah" name="kodeMasalah" class="form-control" />
                                                        </div>
                                                        <div class="form-group mb-5">
                                                            <label class="required form-label"
                                                                for="sifat">Sifat</label>
                                                            <select class="form-select form-select-solid" name="sifat" id="sifat">
                                                                <option></option>
                                                                <option value="Segera">Segera</option>
                                                                <option value="Amat Segera">Amat Segera
                                                                </option>
                                                            </select>
                                                        </div>
                                                        <div class="form-group mb-5">
                                                            <label class="form-label"> Keterangan </label>
                                                            <textarea type="text" id="keterangan" name="keterangan" class="form-control"></textarea>
                                                        </div>
                                                        <button type="submit" class="btn btn-info btn-sm" id="btnCreate">Save</button>
                                                    </form>
                                                </div>
                                                <div class="col">
                                                    <form action="" id="formDisposisi">
                                                        <div class="form-group mb-5">
                                                            <label class="form-label"> Upload Dokumen Surat/Fax </label>
                                                            <input type="file" class="dropify" data-height="100" />
                                                            <div class="text-danger"><i>*Drop Files disini atau klik untuk mengupload.</i>
                                                            </div>
                                                        </div>
                                                        <label class="form-label"> Disposisi/Tindak Lanjut</label>
                                                        <div class="rounded border border-gray-300 p-5 mb-5">
                                                            <div class="row mb-5">
                                                                <% if (disposisiMaster.length > 5) { %>
                                                                    <% for(let i=0; i < disposisiMaster.length; i++) { %> 
                                                                        <div class="col-sm-6">
                                                                            <div class="form-check form-check-custom mb-1">                                                            
                                                                                <input class="form-check-input disposisi" type="checkbox" id="disposisi_<%= disposisiMaster[i]._id %>" name="disposisi[]" value="<%= disposisiMaster[i]._id %>"/>
                                                                                <label class="form-check-label" for="disposisi_<%= disposisiMaster[i]._id %>"> <%= disposisiMaster[i].nama %></label>
                                                                            </div>
                                                                        </div>                                                                    
                                                                    <% } %>
                                                                <% } %>
                                                            </div>                                                            
                                                            <div class="form-group mb-5">
                                                                <label class="required form-label" for=""> Kepada</label>
                                                                <select class="form-select form-select-solid select2-multiple" id="penerima" name="penerima[]" data-control="select2"  data-close-on-select="false" data-placeholder="Kepada" data-allow-clear="true" multiple="multiple">
                                                                    <% users.forEach(user=> { %>
                                                                        <option value="<%= user._id %>">
                                                                            <%= user.username %> - <%= user.jabatan %>
                                                                        </option>
                                                                        <% }) %>
                                                                </select>
                                                            </div>
                                                            <div class="form-group mb-5">
                                                                <label class="form-label"> Keterangan </label>
                                                                <textarea type="text" id="tindakLanjut" name="tindakLanjut" class="form-control"></textarea>
                                                            </div>
                                                        </div>
                                                        <label class="form-label"> History Disposisi/Tindak Lanjut</label>
                                                        <div class="rounded border border-gray-300 p-5 mb-5">
                                                            ...
                                                        </div>                                                      
                                                        <div class="form-group d-flex justify-content-end">
                                                            <!-- <button type="submit" class="btn btn-info btn-sm" id="btnCreate">Save</button> -->
                                                            <!-- <button type="button" class="btn btn-info btn-sm" id="" onclick="submitNotadinasSent()">Savesasasa</button> -->
                                                        </div>
                                                    </form>
                                                </div>
                                                    
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <div class="me-2">
                                            <button type="button" class="btn btn-light btn-active-light-primary btn-sm" data-kt-stepper-action="previous"> Previous</button>
                                        </div>
                                        <div>
                                            <button type="button" class="btn btn-primary btn-sm" data-kt-stepper-action="next"> Next </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                note
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<%- include ../partials/footer.ejs %>
<%- include ../partials/js.ejs %>

<script>
    var element = document.querySelector("#createNotaDinas");
    var stepper = new KTStepper(element);
    stepper.on("kt.stepper.next", function (stepper) {
        stepper.goNext();
    });
    stepper.on("kt.stepper.previous", function (stepper) {
        stepper.goPrevious();
    });

    $("#tglNotaDinas").flatpickr({
        enableTime: false,
        dateFormat: "d/m/Y",
    });
    $("#tglNotaDinas-step1").flatpickr({
        enableTime: false,
        dateFormat: "d/m/Y",
    });
    $('.dropify').dropify({
        messages: {
            'default': 'Drag and drop a file here or click',
            'replace': 'Drag and drop or click to replace',
            'remove': 'Remove',
            'error': 'Ooops, something wrong happended.'
        }
    });

    function registerNoNotaDinas() {
        const tahunAgenda = $('#tahunAgenda').val();
        const tglNotaDinas = $('#tglNotaDinas-step1').val();
        const dari = $('#dari-step1').val();
        const kepada = $('#kepada-step1').val();
        const perihal = $('#perihal-step1').val();
        const lampiran = $('#lampiran-step1').val();
        const kodeMasalah = $('#kodeMasalah-step1').val();
        const sifat = $('#sifat-step1').val();
        const keterangan = $('#keterangan-step1').val();

        const valuenNoAgenda = `<%= typeof lastNoAgenda !== 'undefined' && lastNoAgenda !== null ? lastNoAgenda.noAgenda + 1 : 1 %>`;
        const noAgenda = valuenNoAgenda + "/" + kodeMasalah + "/" + tahunAgenda;
        const noNotaDinas = valuenNoAgenda + "/" + kodeMasalah + "/" + dari + "/" + tahunAgenda;
        console.log(valuenNoAgenda + "/" + kodeMasalah + "/" + tahunAgenda);
        if (tahunAgenda === "") {
            Swal.fire("Perhatian", "Tahun Agenda tidak boleh kosong", "warning");
        } else if (tglNotaDinas === "") {
            Swal.fire("Perhatian", "Tanggal Nota Dinas tidak boleh kosong", "warning");
        } else if (dari === "") {
            Swal.fire("Perhatian", "Dari tidak boleh kosong", "warning");
        } else if (kepada === "") {
            Swal.fire("Perhatian", "Kepada tidak boleh kosong", "warning");
        } else if (perihal === "") {
            Swal.fire("Perhatian", "Perihal tidak boleh kosong", "warning");
        } else if (kodeMasalah === "") {
            Swal.fire("Perhatian", "kodeMasalah tidak boleh kosong", "warning");
        } else if (sifat === "") {
            Swal.fire("Perhatian", "Sifat tidak boleh kosong", "warning");
        } else {
            $('#tglNotaDinas').val(tglNotaDinas);
            $('#dari').val(dari);
            $('#kepada').val(kepada);
            $('#perihal').val(perihal);
            $('#lampiran').val(lampiran);
            $('#kodeMasalah').val(kodeMasalah);
            $('#sifat').val(sifat);
            $('#keterangan').val(keterangan);
            $('#noAgenda').val(noAgenda.toUpperCase());
            $('#noNotaDinas').val(noNotaDinas.toUpperCase());
            Swal.fire("Berhasil", "Registrasi Nomor Nota Dinas berhasil", "success");
        }
    }

    function submitNotadinasSent(){
        const pengirim = $('#dari').val();        
        const penerima = $('#penerima').select2('val');
        const tindakLanjut = $('#tindakLanjut').val();
        const notaDinasKode = "";
        const sentKode = "";
        const disposisi = [];
        $('.disposisi').each(function() {
            if ($(this).is(":checked")) {
                disposisi.push($(this).val());
            }
        });
        console.log(penerima);  
        console.log(disposisi);
        $.ajax({
            url: '/notadinas/notadinas-sent',
            method: 'POST',
            data: { pengirim, penerima: JSON.stringify(penerima), notaDinasKode, sentKode, disposisi: JSON.stringify(disposisi), tindakLanjut},
            success: function (response) {
                console.log("berhasil menyimpan notadinassent: ", response);
            },
        });
    }

    function submitNotadinasInbox(){
        const pengirim = $('#dari').val();        
        const penerima = $('#penerima').select2('val');
        const notaDinasKode = "";
        const sentKode = "";
        const disposisi = [];
        $('.disposisi').each(function() {
            if ($(this).is(":checked")) {
                disposisi.push($(this).val());
            }
        });
        const tindakLanjut = $('#tindakLanjut').val();
        const tanggal = new Date().toLocaleDateString('id-ID');
        const flagRead = "";
        const flagDone= "";
        
        

        // console.log(penerima);  
        // console.log(disposisi);
        console.log(pengirim);

        $.ajax({
            url: '/notadinas/notadinas-inbox',
            method: 'POST',
            data: { 
                pengirim: pengirim,  
                penerima: JSON.stringify(penerima), 
                notaDinasKode: notaDinasKode,  
                sentKode: sentKode,  
                disposisi: JSON.stringify(disposisi), 
                tindakLanjut: tindakLanjut,
                tanggal: tanggal
            },
            success: function (response) {
                console.log("berhasil menyimpan inbox: ", response);
            },
        });
    }

    $(document).ready(function () {
        $('.select2-multiple').select2();

        $('#formCreate').submit(function (e) {
            e.preventDefault();
            const valuenNoAgenda = `<%= typeof lastNoAgenda !== 'undefined' && lastNoAgenda !== null ? lastNoAgenda.noAgenda + 1 : 1 %>`;
            const noAgenda = valuenNoAgenda;
            const noNotaDinas = $('#noNotaDinas').val();
            const tahunAgenda = $('#tahunAgenda').val();
            const tglNotaDinas = $('#tglNotaDinas').val();
            const dari = $('#dari').val();
            const kepada = $('#kepada').val();
            const perihal = $('#perihal').val();
            const lampiran = $('#lampiran').val();
            const kodeMasalah = $('#kodeMasalah').val();
            const sifat = $('#sifat').val();
            const keterangan = $('#keterangan').val();

            if (tahunAgenda === "") {
                Swal.fire("Perhatian", "Tahun Agenda harus diisi", "warning");
            } else if (tglNotaDinas === "") {
                Swal.fire("Perhatian", "Tanggal Nota Dinas harus diisi", "warning");
            } else if (dari === "") {
                Swal.fire("Perhatian", "Dari harus diisi", "warning");
            } else if (kepada === "") {
                Swal.fire("Perhatian", "Kepada harus diisi", "warning");
            } else if (perihal === "") {
                Swal.fire("Perhatian", "Perihal harus diisi", "warning");
            } else if (kodeMasalah === "") {
                Swal.fire("Perhatian", "Kode Masalah harus diisi", "warning");
            } else {
                $.ajax({
                    url: '/notadinas/create',
                    method: 'POST',
                    data: { noAgenda, noNotaDinas, tahunAgenda, tglNotaDinas, dari, kepada, perihal, lampiran, kodeMasalah, sifat, keterangan },
                    success: function (response) {
                        console.log("Sukses: ", response);
                        Swal.fire("Berhasil", "Simpan Data Nota Dinas Berhasil.", "success");
                    },
                });
                Swal.fire("Berhasil", "Simpan Data Nota Dinas Berhasil.", "success");
            }
            submitNotadinasSent();
            submitNotadinasInbox();


        });


        
    });
</script>